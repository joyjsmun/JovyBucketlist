<% include ../partials/header%>
    <div class="container">
        <div class="row">
            
        
        <h1 style="text-align:center">Create a New Bucket List</h1>
        <h5 style="text-align:center">Where Do You Wanna Go Next?</h5>
        
        <div style="width:30%;margin:30px auto;">
            <form action="/places" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="when" placeholder="when(yyyy/mm)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
        <a href="/places">Go Back</a>
        </div>
    </div>
    </div>
